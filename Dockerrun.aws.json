{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "gginis/multi-client",
      "hostname": "client",
      "essential": false 
    },
    {  
      "name": "server", 
      "image": "gginis/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker", 
      "image": "gginis/multi-worker",
      "hostname": "worker",
      "essential": false 
    },
    {
      "name": "nginx",      
      "image": "gginis/multi-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80, 
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }
  ]
}
